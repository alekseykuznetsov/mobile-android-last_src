<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo" />

    <style name="product_card_rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/product_card_rating_stars</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="product_card_small_rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/product_card_small_rating_stars</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="filter_dialog" parent="@android:style/Theme.Translucent.NoTitleBar"></style>

    <!-- Тема для обычных диалоговых окон -->
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@android:color/white</item>
        <item name="android:windowTitleStyle">@style/dialog_title_style</item>
    </style>

    <style name="custom_dialog_dark" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style</item>
    </style>

    <style name="dialog_title_style" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:background">#222222</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

<!--     Тема для alert-диалогов -->
    <style name="custom_alert_dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_alert_title_style</item>
    </style>

    <style name="dialog_alert_title_style" parent="@android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">#2f2f2f</item>
    </style> 
    
</resources>