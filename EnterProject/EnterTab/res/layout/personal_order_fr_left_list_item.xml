<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_right_border" >

    <ru.enter.widgets.TextViewNormal
        android:id="@+id/personal_order_fr_list_item_label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:text="Заказ от"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ru.enter.widgets.TextViewNormal
        android:id="@+id/personal_order_fr_list_item_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/personal_order_fr_list_item_label_title"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/personal_order_fr_list_item_label_title"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ru.enter.widgets.TextViewBold
        android:id="@+id/personal_order_fr_list_item_text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_order_fr_list_item_label_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <ru.enter.widgets.TextViewNormal
        android:id="@+id/personal_order_fr_list_item_text_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/personal_order_fr_list_item_text_number"
        android:gravity="right"
        android:textSize="16dp"
        android:textColor="#777777" />

</RelativeLayout>