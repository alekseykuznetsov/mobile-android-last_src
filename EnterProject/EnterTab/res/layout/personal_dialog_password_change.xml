<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="15dp" >

        <ru.enter.widgets.EditTextNormal
            android:id="@+id/personal_dialog_password_change_edittext_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/product_list_bg_field"
            android:ems="10"
            android:hint="Введите старый пароль"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="20dp" />

		<ru.enter.widgets.EditTextNormal
            android:id="@+id/personal_dialog_password_change_edittext_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/product_list_bg_field"
            android:ems="10"
            android:hint="Введите новый пароль"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="20dp" />

        <ru.enter.widgets.EditTextNormal
            android:id="@+id/personal_dialog_password_change_edittext_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/product_list_bg_field"
            android:ems="10"
            android:hint="Повторите пароль"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ru.enter.widgets.ButtonNormal
                android:id="@+id/personal_dialog_password_change_button_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowColor="#ffffff"
                android:shadowDx="0"
                android:shadowDy="1"
                android:background="@drawable/selector_btn_solid_grey"
                android:shadowRadius="1"
                android:text="Назад"
                android:textSize="20dp" />

            <ru.enter.widgets.ButtonNormal
                android:id="@+id/personal_dialog_password_change_button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:shadowColor="#ffffff"
                android:shadowDx="0"
                android:shadowDy="1"
                android:background="@drawable/selector_btn_solid_grey"
                android:shadowRadius="1"
                android:text="Сохранить"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/personal_dialog_password_change_progress_frame"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignBottom="@+id/personal_edit_info_linear_main"
        android:layout_alignParentTop="true"
        android:background="#D9000000"
        android:clickable="true" 
        android:visibility="gone">

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Small"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
    
</RelativeLayout>