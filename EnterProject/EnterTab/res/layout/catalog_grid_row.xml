<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="15dp" >

    
    <RelativeLayout
        android:id="@+id/base_product_grid_row_frame_images"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/catalog_grid_row_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_centerInParent="true"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/catalog_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

    </RelativeLayout>
    
<!--     <ImageView -->
<!--         android:id="@+id/catalog_image" -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:scaleType="center" /> -->

    <ru.enter.widgets.TextViewBold
        android:id="@+id/catalog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <ru.enter.widgets.TextViewNormal
        android:id="@+id/catalog_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</LinearLayout>