<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/service_left_fr_group_image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ru.enter.widgets.TextViewBold
        android:id="@+id/service_left_fr_group_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableRight="@drawable/arrow_white_right"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textSize="26dp" />

    <ImageView
        android:id="@+id/service_left_fr_group_image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp" />

</LinearLayout>