<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp" >

    <ImageView
        android:id="@+id/order_complete_list_item_additional_image_F1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/basket_icn_f1" />

    <ru.enter.widgets.TextViewNormal
        android:id="@+id/order_complete_list_item_additional_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <ru.enter.widgets.TextViewNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кол-во"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ru.enter.widgets.TextViewNormal
            android:id="@+id/order_complete_list_item_additional_text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ru.enter.widgets.TextViewNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="шт."
            android:textColor="#000000"
            android:textSize="18dp" />
    </LinearLayout>

    <ru.enter.widgets.TextViewBold
        android:id="@+id/order_complete_list_item_additional_text_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="26dp" />

    <ru.enter.widgets.TextViewNormal
        android:id="@+id/order_complete_list_item_additional_text_ruble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Р"
        android:textColor="#000000"
        android:textSize="26dp" />

</LinearLayout>