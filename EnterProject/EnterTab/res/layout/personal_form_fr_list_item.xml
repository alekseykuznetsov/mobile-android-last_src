<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp" 
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/personal_form_fr_list_item_linear_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ru.enter.widgets.TextViewNormal
            android:id="@+id/personal_form_fr_list_item_text_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="18dp" />

        <ru.enter.widgets.ButtonNormal
            android:id="@+id/personal_form_fr_text_button_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="3.5"
            android:background="@drawable/selector_btn_stroke"
            android:duplicateParentState = "false"
            android:minHeight="1dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Редактировать"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>