<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shop_bg_line_multiple" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <ru.enter.widgets.TextViewNormal
                android:id="@+id/shop_bottom_fr_text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ru.enter.widgets.TextViewNormal
                android:id="@+id/shop_bottom_fr_label_how"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Как добраться"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <ru.enter.widgets.TextViewBold
                android:id="@+id/shop_bottom_fr_label_way_walk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Проезд на городском траспорте"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ru.enter.widgets.TextViewNormal
                android:id="@+id/shop_bottom_fr_text_way_walk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ru.enter.widgets.TextViewBold
                android:id="@+id/shop_bottom_fr_label_way_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Проезд на авто"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ru.enter.widgets.TextViewNormal
                android:id="@+id/shop_bottom_fr_text_way_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>