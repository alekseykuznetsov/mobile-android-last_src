<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/personal_order_fr_right_list_item_image_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center" />
    
    <LinearLayout
        android:id="@+id/personal_order_fr_right_list_item_main_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/personal_order_fr_right_list_item_image_main"
        android:orientation="vertical"
        android:paddingRight="20dp" >

        <LinearLayout
            android:id="@+id/personal_order_fr_right_list_item_middle_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <ru.enter.widgets.TextViewNormal
                    android:id="@+id/personal_order_fr_right_list_item_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <ru.enter.widgets.TextViewNormal
                    android:id="@+id/personal_order_fr_right_list_item_text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:textColor="#000000"
                    android:textSize="26dp" />

                <RatingBar
                    android:id="@+id/personal_order_fr_right_list_item_rating_bar"
                    style="@style/product_card_small_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:isIndicator="true"
                    android:numStars="5"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personal_order_fr_right_list_item_price_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:gravity="right"
                android:orientation="horizontal" >

                <ru.enter.widgets.TextViewBold
                    android:id="@+id/personal_order_fr_right_list_item_text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <ru.enter.widgets.TextViewNormal
                    android:id="@+id/personal_order_fr_right_list_item_text_ruble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="26dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personal_order_fr_right_list_item_linear_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ru.enter.widgets.TextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кол-во: "
                android:textColor="#000000"
                android:textSize="18dp" />

            <ru.enter.widgets.TextViewNormal
                android:id="@+id/personal_order_fr_right_list_item_text_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ru.enter.widgets.TextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="шт."
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_order_fr_right_list_item_additional_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personal_order_fr_right_list_item_main_linear"
        android:layout_below="@+id/personal_order_fr_right_list_item_main_linear"
        android:layout_marginTop="14dp"
        android:divider="@drawable/personal_order_divider_line"
        android:orientation="vertical"
        android:showDividers="middle" >

    </LinearLayout>

</RelativeLayout>