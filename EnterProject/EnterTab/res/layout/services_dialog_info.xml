<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/services_dialog_info_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/services_dialog_info_image_default" />

        <ru.enter.widgets.TextViewBold
            android:id="@+id/services_dialog_info_text_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/services_dialog_info_image"
            android:text="5% от стоимости товара (минимум 800 рублей)"
            android:textSize="20dp"
            android:textColor="#000000" />

        <ru.enter.widgets.TextViewBold
            android:id="@+id/services_dialog_info_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/services_dialog_info_text_price_text"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/services_dialog_info_image"
            android:text="590"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <ru.enter.widgets.TextViewNormal
            android:id="@+id/services_dialog_info_text_price_P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/services_dialog_info_text_price"
            android:layout_below="@id/services_dialog_info_text_price_text"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/services_dialog_info_button_buy"
            android:layout_toRightOf="@id/services_dialog_info_text_price"
            android:textSize="30dp"
            android:textColor="#000000" />

        <ru.enter.widgets.ButtonNormal
            android:id="@+id/services_dialog_info_button_buy"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/services_dialog_info_text_price"
            android:layout_below="@id/services_dialog_info_text_price_text"
            android:layout_marginLeft="12dp"
            android:background="@drawable/selector_btn_stroke"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="Купить услугу"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#BBBBBB" />

    <ru.enter.widgets.TextViewNormal
        android:id="@+id/services_dialog_info_text_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#000000"
        android:textSize="20dp" />

</LinearLayout>