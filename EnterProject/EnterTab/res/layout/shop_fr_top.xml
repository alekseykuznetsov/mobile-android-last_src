<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/shop_fr_top_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/shop_fr_top_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/shop_fr_top_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/order_bg"
                android:padding="15dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/shop_fr_top_image_magnifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:background="#55000000"
                android:scaleType="center"
                android:src="@drawable/shop_top_icn_magnifier" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/shop_fr_top_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ru.enter.widgets.TextViewNormal
                android:id="@+id/shop_fr_top_text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="ул. Орджоникидзе, д. 11, стр. 10"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <ru.enter.widgets.TextViewBold
                android:id="@+id/shop_fr_top_label_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_fr_top_text_address"
                android:layout_marginTop="3dp"
                android:text="Время работы:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ru.enter.widgets.TextViewNormal
                android:id="@+id/shop_fr_top_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_fr_top_text_address"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/shop_fr_top_label_time"
                android:textColor="@color/black"/>

            <ru.enter.widgets.TextViewBold
                android:id="@+id/shop_fr_top_label_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_fr_top_label_time"
                android:layout_marginTop="3dp"
                android:text="Телефон:"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <ru.enter.widgets.TextViewNormal
                android:id="@+id/shop_fr_top_text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_fr_top_label_time"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/shop_fr_top_label_phone"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/shop_fr_top_text_phone"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <ru.enter.widgets.ButtonNormal
                    android:id="@+id/shop_fr_top_button_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_stoke_orange_shop"
                    android:text="Описание"
                    android:textColor="@drawable/selector_text_color_stroke"
                    android:textSize="20dp" />

                <ru.enter.widgets.ButtonNormal
                    android:id="@+id/shop_fr_top_button_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_stoke_orange_shop"
                    android:text="Карта"
                    android:textColor="@drawable/selector_text_color_stroke"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1.5" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>