<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
<!-- android:background="@drawable/basket_list_item_button_minus_selector" -->
    <ImageButton
        android:id="@+id/number_picker_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/basket_list_item_button_minus_selector"
        />

    <ru.enter.widgets.TextViewNormal
        android:id="@+id/number_picker_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/basket_bg_field"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="22dp" />
<!-- android:background="@drawable/basket_list_item_button_plus_selector" -->
    <ImageButton
        android:id="@+id/number_picker_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/basket_list_item_button_plus_selector"
        />

</LinearLayout>