<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="430dp"
    android:background="@color/white" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ru.enter.widgets.EditTextNormal
            android:id="@+id/auth_ac_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/product_list_bg_field"
            android:ems="10"
            android:hint="Введите телефон или e-mail"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ru.enter.widgets.EditTextNormal
            android:id="@+id/auth_ac_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/product_list_bg_field"
            android:ems="10"
            android:hint="Введите пароль"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ru.enter.widgets.TextViewNormal
            android:id="@+id/auth_ac_label_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Напомнить пароль"
            android:textColor="#F7AB61"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1.8" />

            <ru.enter.widgets.ButtonBold
                android:id="@+id/auth_ac_btn_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_solid_orange"
                android:padding="5dp"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:text="Войти"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1.8" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#BBBBBB" />

        <ru.enter.widgets.TextViewBold
            android:id="@+id/auth_ac_label_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Или зарегистрируйтесь"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ru.enter.widgets.EditTextNormal
            android:id="@+id/auth_ac_edittext_registration_edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/product_list_bg_field"
            android:ems="10"
            android:hint="Введите имя"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ru.enter.widgets.EditTextNormal
            android:id="@+id/auth_ac_registration_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/product_list_bg_field"
            android:ems="10"
            android:hint="Введите номер телефона"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:id="@+id/auth_ac_registration_view_balance_left"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1.8"
                android:visibility="gone" />

            <ru.enter.widgets.ButtonBold
                android:id="@+id/auth_ac_registration_button_without_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_solid_grey"
                android:shadowColor="#ffffff"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="Продолжить без регистрации"
                android:textSize="18dp" />

            <ru.enter.widgets.ButtonBold
                android:id="@+id/auth_ac_registration_button_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_solid_grey"
                android:shadowColor="#ffffff"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="Отправить"
                android:textSize="18dp" />

            <View
                android:id="@+id/auth_ac_registration_view_balance_rigth"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1.8"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/auth_ac_registration_progress_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B9000000"
        android:clickable="true"
        android:visibility="gone" >

        <ProgressBar
            style="@android:style/Widget.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>