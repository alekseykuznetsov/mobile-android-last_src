<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Выбранная -->
    <item android:drawable="@drawable/btn_stroke_orange"
        android:state_enabled="true"
        android:state_pressed="false"
        android:state_selected="true"/>

    <!-- Не выбранная -->
    <item android:drawable="@drawable/btn_stroke_orange_disable"
        android:state_enabled="true"
        android:state_pressed="false"
        android:state_selected="false"/>
    
    <!-- Удерживаемая выбранная -->
    <item android:drawable="@drawable/btn_stroke_orange_click"
        android:state_enabled="true"
        android:state_pressed="true"
        android:state_selected="true"/>
    
    <!-- Удерживаемая -->
    <item android:drawable="@drawable/btn_stroke_orange_off" 
        android:state_enabled="true"
        android:state_pressed="true"
        android:state_selected="false"/>

</selector>