<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@android:color/white"
>
	<TextView
	android:id="@+id/checkout_online_payment_title_tv" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="@string/checkout_online_payment_title_text"
	android:textSize="15sp"
	android:textColor="@android:color/white"
	android:background="@color/checkout_title_background"
	android:gravity="center"
	android:minHeight="40dip"
	android:focusable="true"
	android:focusableInTouchMode="true"
	/>
	<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/item_gradient_background"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"
	android:layout_marginTop="3dip"
	>
		<EditText
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/checkout_online_payment_name_edit_text"
		android:hint="Имя"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		/>
		<TextView 
		android:text="Как на карте,например,Anton" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:textSize = "15sp"
		android:textColor="@android:color/black"
		android:layout_marginLeft="15dp"
		/> 
		<EditText
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/checkout_online_payment_surname_edit_text"
		android:hint="Фамилия"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		/>
		<TextView 
		android:text="Как на карте,например,Ivanov" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:textSize = "15sp"
		android:textColor="@android:color/black"
		android:layout_marginLeft="15dp"
		/>  
	</LinearLayout>
	
	<Spinner 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/checkout_online_payment_country_spinner"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	/> 
	<EditText
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/checkout_online_payment_city_edit_text"
	android:hint="Город"
	android:layout_marginTop="10dp"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	/>
	<TextView 
	android:text="Например,Москва" 
	android:layout_height="wrap_content" 
	android:layout_width="wrap_content" 
	android:textSize = "15sp"
	android:textColor="@android:color/black"
	android:layout_marginLeft="15dp"
	/>  
	<EditText
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/checkout_online_payment_email_edit_text"
	android:hint="E-mail"
	android:layout_marginTop="10dp"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	android:inputType="textEmailAddress"
	/>
	<TextView 
	android:text="Например, mts@mts.ru" 
	android:layout_height="wrap_content" 
	android:layout_width="wrap_content" 
	android:textSize = "15sp"
	android:textColor="@android:color/black"
	android:layout_marginLeft="15dp"
	/> 
    <EditText
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/checkout_online_payment_number_edit_text"
	android:hint="Номер карты"
	android:layout_marginTop="10dp"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	android:inputType="numberSigned"
    />
	<TextView 
	android:text="Например,4100111" 
	android:layout_height="wrap_content" 
	android:layout_width="wrap_content" 
	android:textSize = "15sp"
	android:textColor="@android:color/black"
	android:layout_marginLeft="10dp"
	/> 	
      <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView 
        android:text="Месяц" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/text6" 
        android:textStyle="bold"
        android:textSize = "15sp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"/>
      <Spinner 
    android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/spinner"
       />
      <TextView 
        android:text="Год" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/text7" 
        android:textStyle="bold"
        android:textSize = "15sp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="15dp"/>
      <Spinner 
    android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/spinner"
       /> 
   <TextView 
        android:text="Срок действия карты" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/text7" 
        android:textStyle="bold"
        android:textSize = "17sp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"/>
      </LinearLayout> 
      <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView 
        android:text="Код CVC2 или CVV2" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/text8" 
        android:textStyle="bold"
        android:textSize = "17sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"/>
     <EditText
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/number_edit_text"
	android:hint="                    "
	android:layout_marginTop="10dp"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
    />   
      </LinearLayout>
      <ImageView
		android:id="@+id/reklama" 
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content" 
        	android:layout_gravity = "right"
        	android:layout_marginLeft="10dp"
        	android:src="@drawable/icon"/> 
     <Button
	 android:text="Подтвердить" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/geolokaciya_Button"              
        android:textStyle="bold"
        android:layout_gravity="right"
        />  	   	
</LinearLayout>
