<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:id="@+id/comment_header_layout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/navbar"
    android:orientation="horizontal">
        <TextView 
	        android:text="Отзывы" 
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingLeft="20dp"
	        android:textSize="25dip"
	        android:textStyle="italic"
	        android:textColor="@color/white"
	        android:layout_gravity="center_vertical"/>
        <Button 
	        android:id="@+id/comment_button_myoffice" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_account"
	        android:layout_gravity="center_vertical"
	        android:layout_marginRight="15dip"
	        />
    </LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			 android:background="@android:color/darker_gray"
			>
				<TextView 
			         android:text="Asus Eee PC 1015PW (золотистый)" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/name1" 
			         android:textStyle="bold"
			         android:textSize = "25sp"
			         android:gravity="center"
			         android:textColor="@android:color/black"
			        >
			    </TextView>
			    <TextView 
			         android:text="Рейтинг *****" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/name2" 
			         android:textStyle="bold"
			         android:textSize = "20sp"
			         android:gravity="center"
			         android:textColor="@android:color/black"
			        >
			    </TextView>
		    </LinearLayout>
		  <ListView
		  		android:id="@+id/report_list_view" 
		    	android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="false"/>
		   
		   <LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="@android:color/darker_gray">
			<TextView 
				android:text="Оценить:" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:id="@+id/text5" 
				android:textStyle="bold"
				android:textSize = "30sp"
				android:textColor="@android:color/white"
				/>
				</LinearLayout>
		<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
		 <TextView 
				android:text="Дизайн" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:id="@+id/text6" 
				android:textStyle="bold"
				android:textSize = "20sp"
				android:textColor="@android:color/white"
				/> 
				<RatingBar 
				android:id="@+id/small_ratingbar"
            	style="?android:attr/ratingBarStyleSmall"
	            android:layout_marginLeft="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical" />
				</LinearLayout>		
		<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
		 <TextView 
				android:text="Функциональность" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:id="@+id/text7" 
				android:textStyle="bold"
				android:textSize = "20sp"
				android:textColor="@android:color/white"
				/> 
				<RatingBar 
				android:id="@+id/small_ratingbar1"
            	style="?android:attr/ratingBarStyleSmall"
	            android:layout_marginLeft="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical" />
				</LinearLayout>		
		<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
		 <TextView 
				android:text="Цена" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:id="@+id/text8" 
				android:textStyle="bold"
				android:textSize = "20sp"
				android:textColor="@android:color/white"
				/> 
			<RatingBar 
				android:id="@+id/small_ratingbar2"
            	style="?android:attr/ratingBarStyleSmall"
	            android:layout_marginLeft="5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical" />
				</LinearLayout>	
			<EditText 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/login_edit_text"
				/>	
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button  
						android:text="Правила" 
						android:layout_height="wrap_content" 
						android:layout_width="wrap_content" 
						android:id="@+id/pravila_Button"              
						android:textStyle="bold"
						android:textSize="20dp"
						android:layout_gravity = "left"
						android:layout_marginTop="10dp"/>
				<Button  
						android:text="Оставить отзыв" 
						android:layout_height="wrap_content" 
						android:layout_width="wrap_content" 
						android:id="@+id/ostavit_otzyv_Button"              
						android:textStyle="bold"
						android:textSize="20dp"
						android:layout_gravity = "right"
						android:layout_marginTop="10dp"/>
				</LinearLayout>	
</LinearLayout>
