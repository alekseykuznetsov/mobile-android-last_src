<?xml version="1.0" encoding="utf-8"?>
<!-- Экран выбора социальной сети для отправки -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_viewer_send_dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#ffffff"
    android:gravity="bottom"
    android:orientation="vertical" 
    android:padding="5dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:text="Отправить новость"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/article_viewer_send_dialog_e_mail"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginBottom="6dip"
        android:text="Отправить по E-Mail"
        android:textStyle="bold" />

    <Button
        android:id="@+id/article_viewer_send_dialog_lj"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginBottom="6dip"
        android:text="LIVEJOURNAL"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/article_viewer_send_dialog_twitter"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginBottom="6dip"
        android:text="TWITTER"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/article_viewer_send_dialog_facebook"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginBottom="6dip"
        android:text="Поделиться Facebook"
        android:textStyle="bold" />

    <Button
        android:id="@+id/article_viewer_send_dialog_vk"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginBottom="6dip"
        android:text="Поделиться ВКонтакте"
        android:visibility="visible"
        android:textStyle="bold" />

    <Button
        android:id="@+id/article_viewer_send_dialog_exit"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginBottom="6dip"
        android:text="Отмена"
        android:textStyle="bold" />

</LinearLayout>