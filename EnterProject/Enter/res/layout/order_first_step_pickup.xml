<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="10dip" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Выберите магазин, в котором хотите получить заказ:"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/order_first_step_edit_shop_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/order_first_step_button_choose_shop"
            style="@style/customButtonBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрать магазин" />

        <Button
            android:id="@+id/order_first_step_button_geolocation_shop"
            style="@style/customButtonBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:text="Геолокация" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#ababab" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:text="Укажите дату самовывоза"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/order_first_step_spinner_pickup_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >
    </Spinner>
    
     <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#ababab" />
     
     <Button  
		android:text="Далее" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:id="@+id/order_first_step_button_next"              
		style="@style/customButtonBlack"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="5dip"
		android:enabled="false"
		/>				

</LinearLayout>