<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/item_gradient_background"
  android:paddingBottom="10dp"
  android:paddingTop="10dp">
    <CheckBox 
    android:layout_alignParentLeft="true" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:id="@+id/wish_list_product_check"
    android:layout_centerVertical="true"
    android:button="@drawable/checkbox_background"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="-10dp"
    >
    </CheckBox>
    <ImageView 
    android:src="@drawable/icon" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:id="@+id/wish_list_product_image" 
    android:layout_toRightOf="@+id/wish_list_product_check" 
    android:layout_centerVertical="true">
    </ImageView>
    <LinearLayout 
    android:layout_toRightOf="@+id/wish_list_product_image" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:layout_alignBottom="@+id/wish_list_product_image"
    android:gravity="center_vertical"
    android:paddingLeft="10dp">
        <RatingBar 
        android:id="@+id/wish_list_product_rating" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
    	android:numStars="5"
    	/>
        <TextView 
        android:text="Отзывы"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="2dp">
        </TextView>
        <TextView 
        android:text="24" 
        android:id="@+id/wish_list_product_report_num" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:background="#f7941d"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="12sp"
        android:padding="1dp">
        </TextView>
        <TextView 
        android:text="TextView" 
        android:id="@+id/wish_list_product_price" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:gravity="right"
        android:textStyle="bold"
        android:paddingRight="10dp">
        </TextView>
    </LinearLayout>
    <TextView 
    android:layout_toRightOf="@+id/wish_list_product_image" 
    android:text="TextView" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:id="@+id/wish_list_product_title" 
    android:layout_alignTop="@+id/wish_list_product_image"
    android:paddingLeft="10dp">
    </TextView>
    
</RelativeLayout>
