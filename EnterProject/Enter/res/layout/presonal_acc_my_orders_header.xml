<?xml version="1.0" encoding="utf-8"?>
<!-- Мои заказы. Верхушка нижнего списка. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <TextView
        android:id="@+id/personal_acc_my_orders_delivery_type_fake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Можно забрать" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/personal_acc_my_orders_label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Заказ" />

    <TextView
        android:id="@+id/personal_acc_my_orders_date_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/personal_acc_my_orders_delivery_type_fake"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="№123-345 от 12.04.2012"
        android:textStyle="bold" />
    <!--  -->

    <TextView
        android:id="@+id/personal_acc_my_orders_delivery_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_acc_my_orders_date_number"
        android:layout_marginLeft="10dp"
        android:text="Можно забрать" />

    <TextView
        android:id="@+id/personal_acc_my_orders_delivery_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_acc_my_orders_date_number"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/personal_acc_my_orders_delivery_type_fake"
        android:text="20.04.2012"
        android:textStyle="bold" />
    <!--  -->

    <TextView
        android:id="@+id/personal_acc_my_orders_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_acc_my_orders_delivery_type"
        android:layout_marginLeft="10dp"
        android:text="По адресу" />

    <TextView
        android:id="@+id/personal_acc_my_orders_delivery_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/personal_acc_my_orders_delivery_type_fake"
        android:layout_below="@id/personal_acc_my_orders_delivery_date"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="ул. Ленина, д. 1, кор. 5, кв. 123"
        android:textStyle="bold" />
    <!--  -->

    <TextView
        android:id="@+id/personal_acc_my_orders_delivery_canceled"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_acc_my_orders_delivery_address"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="Отменен"
        android:textStyle="bold"
        android:visibility="gone" />
    <!--  -->

    <View
        android:id="@+id/personal_acc_my_orders_view_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/personal_acc_my_orders_delivery_address"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="9dp"
        android:background="@color/gainsboro" />

    <ImageView
        android:id="@+id/personal_account_activity_my_orders_status_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_acc_my_orders_view_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_account_activity_my_orders_status_frame"
        android:background="#939393"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/personal_account_activity_my_orders_listview_title_text"
        android:textStyle="bold" />

</RelativeLayout>