<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="center"
		android:background="@color/white">
		<TextView 
	    android:id="@+id/photo_cover_flow_name"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:textColor="@android:color/black"
	    android:textSize="16sp"
	    android:textStyle="bold"
	    android:layout_marginTop="10dip"
	    android:layout_gravity="top"
	    />  
		<ru.enter.gallery.CoverFlow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/gallery_cover"
			android:layout_gravity="center"
			/>
		<ImageView
			android:id="@+id/gallery_cover__view_waiting_img"
			android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:gravity="center" 
		    android:visibility="gone"
		    android:src="@drawable/filled_box"/>
		<ProgressBar
	    	android:id="@+id/gallary_cover_view_progress"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:visibility="gone"
	    />
		    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:layout_gravity="bottom" >

        <Button
            android:id="@+id/photo_cover_flow_wish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dip"
            android:background="@drawable/btn_wishlist_background"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/photo_cover_flow_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000" />

            <TextView
                android:id="@+id/photo_cover_flow_price_symb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" p" />
        </LinearLayout>

        <Button
            android:id="@+id/photo_cover_flow_basket_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/btn_basket_background" />
    </RelativeLayout>
</FrameLayout>
