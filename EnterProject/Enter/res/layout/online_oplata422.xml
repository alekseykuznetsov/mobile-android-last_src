<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <FrameLayout
	  android:id="@+id/yurlico_frame"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:background="#00f000">
	  	<TextView 
		         android:text="Online оплата" 
		         android:layout_height="wrap_content" 
		         android:layout_width="wrap_content" 
		         android:id="@+id/text" 
		         android:layout_gravity="center"
		         android:textStyle="bold"
		         android:textSize = "20sp"
		         android:textColor="@android:color/white"
		         android:layout_marginLeft="5dp" />
	</FrameLayout>
				<EditText
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/name_edit_text"
					android:hint="Имя"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
				    />
				<TextView 
		         android:text="как на карте,например,Anton" 
		         android:layout_height="wrap_content" 
		         android:layout_width="wrap_content" 
		         android:id="@+id/text1" 
		         android:textStyle="bold"
		         android:textSize = "15sp"
		         android:textColor="@android:color/white"
		         android:layout_marginLeft="10dp"
				 android:layout_marginRight="10dp"
		        /> 
		        <EditText
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/surname_edit_text"
					android:hint="Фамилия"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
				    />
				<TextView 
			         android:text="как на карте,например,Ivanov" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/text2" 
			         android:textStyle="bold"
			         android:textSize = "15sp"
			         android:textColor="@android:color/white"
			         android:layout_marginLeft="10dp"
					 android:layout_marginRight="10dp"
		        />  
		         <Spinner 
				    android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/spinner"
			        android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
			        /> 
			    <EditText
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/city_edit_text"
					android:hint="Город"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
				    />
				<TextView 
			         android:text="например,Москва" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/text3" 
			         android:textStyle="bold"
			         android:textSize = "15sp"
			         android:textColor="@android:color/white"
			         android:layout_marginLeft="10dp"
					 android:layout_marginRight="10dp"
		        />  
		        <EditText
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/email_edit_text"
					android:hint="email"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
				    />
				<TextView 
			         android:text="например, mts@mts.ru" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/text4" 
			         android:textStyle="bold"
			         android:textSize = "15sp"
			         android:textColor="@android:color/white"
			         android:layout_marginLeft="10dp"
					 android:layout_marginRight="10dp"
		        /> 
		        <EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/number_edit_text"
					android:hint="номер карты"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
				    />
				<TextView 
			         android:text="например,4100111" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/text5" 
			         android:textStyle="bold"
			         android:textSize = "15sp"
			         android:textColor="@android:color/white"
			         android:layout_marginLeft="10dp"
					 android:layout_marginRight="10dp"
		        /> 
		        <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        <TextView 
			         android:text="Месяц" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/text6" 
			         android:textStyle="bold"
			         android:textSize = "15sp"
			         android:textColor="@android:color/white"
			         android:layout_marginLeft="10dp"/>
		        <Spinner 
				    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/spinner"
			        />
			       <TextView 
			         android:text="Год" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/text7" 
			         android:textStyle="bold"
			         android:textSize = "15sp"
			         android:textColor="@android:color/white"
			         android:layout_marginLeft="15dp"/>
		        <Spinner 
				    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/spinner"
			        /> 
			    <TextView 
			         android:text="Срок действия карты" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/text7" 
			         android:textStyle="bold"
			         android:textSize = "17sp"
			         android:textColor="@android:color/white"
			         android:layout_marginLeft="20dp"/>
		        </LinearLayout> 
		        <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        <TextView 
			         android:text="Код CVC2 или CVV2" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/text8" 
			         android:textStyle="bold"
			         android:textSize = "17sp"
			         android:textColor="@android:color/white"
			         android:layout_marginLeft="10dp"/>
			      <EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/number_edit_text"
					android:hint="                    "
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
				    />   
		        </LinearLayout>
		        <ImageView
						android:id="@+id/reklama" 
			         	android:layout_height="wrap_content" 
			         	android:layout_width="wrap_content" 
			         	android:layout_gravity = "right"
			         	android:layout_marginLeft="10dp"
			         	android:src="@drawable/icon"/> 
			      <Button
					 android:text="Подтвердить" 
			         android:layout_height="wrap_content" 
			         android:layout_width="wrap_content" 
			         android:id="@+id/geolokaciya_Button"              
			         android:textStyle="bold"
			         android:layout_gravity="right"
			         />  	   	
</LinearLayout>
